source 'https://rubygems.org'
ruby '2.1.2'
gem 'rails', '4.1.5'

# Rails defaults
gem 'sqlite3'
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'spring', group: :development

# learn-rails
gem 'activerecord-tableless' # use Rails without a database
gem 'foundation-rails' # use Foundation framework
gem 'gibbon' # access to MailChimp API
gem 'google_drive' # use Google Drive spreadsheets for data storage
gem 'high_voltage' # for static pages
gem 'simple_form' # forms made easy

group :development do
	gem 'better_errors' 
	gem 'quiet_assets' # suppress messages in log
  gem 'rails_layout' # generate files for an application layout
end
